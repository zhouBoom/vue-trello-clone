{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "noImplicitAny": false,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "moduleResolution": "node",
    "type": "commonjs",
    "allowJs": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/app/*": ["src/app/*"],
      "@/core/*": ["src/core/*"],
      "@/res/*": ["src/res/*"],
      "@/views/*": ["src/app/views/*"],
      "@/pages/*": ["src/app/views/pages/*"],
      "@/elements/*": ["src/app/views/elements/*"],
      "@/ui/*": ["src/app/views/ui/*"],
      "@/app/state/*": ["src/app/state/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}